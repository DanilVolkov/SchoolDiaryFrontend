                    </Button.Background>
                </Button>
                <!-- Кнопка "Дневник" -->
                <Button x:Name="Grade" Padding="5" Margin="5,5,5,0" Width="184" Height="48" HorizontalAlignment="Stretch" BorderThickness="0,0,0,0" Click="Grade_Click">
                    <Button.Background>
                        <ImageBrush ImageSource="/button_menu_mark_default.png" Stretch="Fill" />
                    </Button.Background>
                </Button>
            </StackPanel>
        </DockPanel>

