                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <TextBlock Text="8:00" Style="{StaticResource RobotoTextStyleTimeText}" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="0" />
                                <Rectangle Height="3" Fill="Black" VerticalAlignment="Center" HorizontalAlignment="Stretch" Grid.Row="1" Margin="10,0,10,0" />
                                <TextBlock Text="8:45" Style="{StaticResource RobotoTextStyleTimeText}" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="2" />
                            </Grid>
                        </Border>

                        <!-- Вторая строка: 9:00 - 9:45 -->
                        <Border Grid.Row="4" Grid.Column="0" Background="#E6D3C7" CornerRadius="10" Height="248" Width="112" BorderBrush="#AC7356" BorderThickness="1,1,1,1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <TextBlock Text="9:00" Style="{StaticResource RobotoTextStyleTimeText}" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="0" />
                                <Rectangle Height="3" Fill="Black" VerticalAlignment="Center" HorizontalAlignment="Stretch" Grid.Row="1" Margin="10,0,10,0" />
                                <TextBlock Text="9:45" Style="{StaticResource RobotoTextStyleTimeText}" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="2" />
                            </Grid>
                        </Border>

                        <!-- Третья строка: 10:00 - 10:45 -->
                        <Border Grid.Row="6" Grid.Column="0" Background="#E6D3C7" CornerRadius="10" Height="248" Width="112" BorderBrush="#AC7356" BorderThickness="1,1,1,1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <TextBlock Text="10:00" Style="{StaticResource RobotoTextStyleTimeText}" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="0" />
                                <Rectangle Height="3" Fill="Black" VerticalAlignment="Center" HorizontalAlignment="Stretch" Grid.Row="1" Margin="10,0,10,0" />
                                <TextBlock Text="10:45" Style="{StaticResource RobotoTextStyleTimeText}" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="2" />
                            </Grid>
                        </Border>

                        <!-- Четвертая строка: 11:00 - 11:45 -->
                        <Border Grid.Row="8" Grid.Column="0" Background="#E6D3C7" CornerRadius="10" Height="248" Width="112" BorderBrush="#AC7356" BorderThickness="1,1,1,1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <TextBlock Text="11:00" Style="{StaticResource RobotoTextStyleTimeText}" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="0" />
                                <Rectangle Height="3" Fill="Black" VerticalAlignment="Center" HorizontalAlignment="Stretch" Grid.Row="1" Margin="10,0,10,0" />
                                <TextBlock Text="11:45" Style="{StaticResource RobotoTextStyleTimeText}" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="2" />
                            </Grid>
                        </Border>

                        <!-- Пятая строка: 12:00 - 12:45 -->
                        <Border Grid.Row="10" Grid.Column="0" Background="#E6D3C7" CornerRadius="10" Height="248" Width="112" BorderBrush="#AC7356" BorderThickness="1,1,1,1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <TextBlock Text="12:00" Style="{StaticResource RobotoTextStyleTimeText}" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="0" />
                                <Rectangle Height="3" Fill="Black" VerticalAlignment="Center" HorizontalAlignment="Stretch" Grid.Row="1" Margin="10,0,10,0" />
                                <TextBlock Text="12:45" Style="{StaticResource RobotoTextStyleTimeText}" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="2" />
                            </Grid>
                        </Border>

                        <!-- Шестая строка: 13:00 - 13:45 -->
                        <Border Grid.Row="12" Grid.Column="0" Background="#E6D3C7" CornerRadius="10" Height="248" Width="112" BorderBrush="#AC7356" BorderThickness="1,1,1,1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <TextBlock Text="13:00" Style="{StaticResource RobotoTextStyleTimeText}" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="0" />
                                <Rectangle Height="3" Fill="Black" VerticalAlignment="Center" HorizontalAlignment="Stretch" Grid.Row="1" Margin="10,0,10,0" />
                                <TextBlock Text="13:45" Style="{StaticResource RobotoTextStyleTimeText}" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="2" />
                            </Grid>
                        </Border>

                        <!-- Седьмая строка: 14:00 - 14:45 -->
                        <Border Grid.Row="14" Grid.Column="0" Background="#E6D3C7" CornerRadius="10" Height="248" Width="112" BorderBrush="#AC7356" BorderThickness="1,1,1,1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <TextBlock Text="14:00" Style="{StaticResource RobotoTextStyleTimeText}" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="0" />
                                <Rectangle Height="3" Fill="Black" VerticalAlignment="Center" HorizontalAlignment="Stretch" Grid.Row="1" Margin="10,0,10,0" />
                                <TextBlock Text="14:45" Style="{StaticResource RobotoTextStyleTimeText}" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="2" />
                            </Grid>
                        </Border>
                        <!-- Продолжайте добавлять строки для других временных интервалов -->


                        <!-- Продолжайте добавлять строки для других временных интервалов -->


                    </Grid>
                </Border>

                <ItemsControl  ItemsSource="{Binding WeekSchedule}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>

                            <!-- Верхняя панель с днями недели -->

                            <!-- Таблица с расписанием -->
                            <Grid x:Name="SheduleGrid">
                                <!-- Определение столбцов -->
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="112" />
                                    <!-- Время -->
                                    <ColumnDefinition Width="24" />
                                    <!-- Отступ -->
                                    <ColumnDefinition MaxWidth="248" Width="248"/>
                                    <!-- Понедельник -->
                                    <ColumnDefinition Width="24" />
                                    <!-- Отступ -->
                                    <ColumnDefinition Width="248" MaxWidth="248"/>
                                    <!-- Вторник -->
                                    <ColumnDefinition Width="24" />
                                    <!-- Отступ -->
                                    <ColumnDefinition Width="248" MaxWidth="248"/>
                                    <!-- Среда -->
                                    <ColumnDefinition Width="24" />
                                    <!-- Отступ -->
                                    <ColumnDefinition Width="248" MaxWidth="248"/>
                                    <!-- Четверг -->
                                    <ColumnDefinition Width="24" />
                                    <!-- Отступ -->
                                    <ColumnDefinition Width="248" MaxWidth="248"/>
                                    <!-- Пятница -->
                                    <ColumnDefinition Width="24" />
                                    <!-- Отступ -->
                                    <ColumnDefinition Width="248" MaxWidth="248" />
                                    <!-- Суббота -->
                                    <ColumnDefinition Width="24" />
                                    <!-- Отступ -->
                                    <ColumnDefinition Width="0*" MaxWidth="248"/>
                                    <!-- Воскресенье -->
                                </Grid.ColumnDefinitions>

                                <!-- Определение строк -->
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="112" MaxHeight="112" />
                                    <!-- 8:00 - 8:45 -->
                                    <RowDefinition Height="24" />
                                    <!-- Отступ -->
                                    <RowDefinition Height="248" />
                                    <!-- 9:00 - 9:45 -->
                                    <RowDefinition Height="24" />
                                    <!-- Отступ -->
                                    <RowDefinition Height="248" />
                                    <!-- 10:00 - 10:45 -->
                                    <RowDefinition Height="24" />
                                    <!-- Отступ -->
                                    <RowDefinition Height="248" />
                                    <!-- 11:00 - 11:45 -->
                                    <RowDefinition Height="24" />
                                    <!-- Отступ -->
                                    <RowDefinition Height="248" />
                                    <!-- 12:00 - 12:45 -->
                                    <RowDefinition Height="24" />
                                    <!-- Отступ -->
                                    <RowDefinition Height="248" />
                                    <!-- 13:00 - 13:45 -->
                                    <RowDefinition Height="24" />
                                    <!-- Отступ -->
                                    <RowDefinition Height="Auto" />
                                    <!-- 14:00 - 14:45 -->
                                </Grid.RowDefinitions>




                            </Grid>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>


                    <!-- ItemContainerStyle -->
                    <ItemsControl.ItemContainerStyle>
                        <Style>
                            <Setter Property="Grid.Column"
                    Value="{Binding ColumnIndex}" />
                            <Setter Property="Grid.Row"
                    Value="{Binding RowIndex}" />
                        </Style>
                    </ItemsControl.ItemContainerStyle>

                    <!-- Единый контейнер -->
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#FBF2EB" Width="248" Height="248"  BorderThickness="1"  BorderBrush="#E6D3C7" CornerRadius="10">
                                <Grid>

                                    <!-- Название предмета -->
                                    <TextBlock Text="{Binding Subject}" 
                           Style="{StaticResource RobotoTextStyleTimeText}" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Center" Margin="0,0,0,44" />
                                    <Border Background="#E6D3C7"   BorderBrush="#C28D71" Visibility="{Binding HasHomework, Converter={StaticResource BooleanToVisibilityConverter}}"
                            CornerRadius="10" 
                            Width="48" 
                            Height="48" 
                            Margin="16,184,0,0" 
                            BorderThickness="1,1,1,1" HorizontalAlignment="Left">
                                        <TextBlock Text="{Binding Homework_Marking}"  Style="{StaticResource Montestrat-Bold}" 
                               
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Center" />
                                    </Border>
                                    <!-- Оценка -->
                                    <ItemsControl ItemsSource="{Binding Grades}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal" Margin="148,184,16,0" FlowDirection="RightToLeft" HorizontalAlignment="Right" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="{Binding Converter={StaticResource GradeToColorConverter}}" BorderBrush="{Binding Converter={StaticResource GradeToColorConverter}, ConverterParameter=BorderBrush}"  CornerRadius="10" Width="48" Height="48" BorderThickness="1,1,1,1" Margin="0,0,-33,0"  >
                                                    <TextBlock Text="{Binding}" Style="{StaticResource Montestrat-Bold}" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
