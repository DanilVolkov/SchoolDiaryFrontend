                            BorderBrush="{Binding Converter={StaticResource GradeToColorConverter}, ConverterParameter=BorderBrush}"
                CornerRadius="10" 
                Width="48" 
                Height="48" 
                Margin="148,184,0,0" 
                BorderThickness="1,1,1,1">
                                        <TextBlock Text="3" 
                       Style="{StaticResource Montestrat-Bold}"
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center" />
                                    </Border>

                                    -->
                                    <!-- Средняя оценка -->
                                    <!--
                                    <Border Background="{Binding Converter={StaticResource GradeToColorConverter}}" 
                            BorderBrush="{Binding Converter={StaticResource GradeToColorConverter}, ConverterParameter=BorderBrush}" 
                CornerRadius="10" 
                Width="48" 
                Height="48" 
                Margin="166,184,0,0" 
                BorderThickness="1,1,1,1">
                                        <TextBlock Text="4" 
                        Style="{StaticResource Montestrat-Bold}"
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center" />
                                    </Border>-->

                                    <!-- Правая оценка -->
                                    <!--<Border Background="{Binding Converter={StaticResource GradeToColorConverter}}" 
                            BorderBrush="{Binding Converter={StaticResource GradeToColorConverter}, ConverterParameter=BorderBrush}" 
                CornerRadius="10" 
                Width="48" 
                Height="48" 
                Margin="184,184,0,0" 
                BorderThickness="1,1,1,1">
                                        <TextBlock Text="5" 
                        Style="{StaticResource Montestrat-Bold}" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center" />-->
                                    <!--</Border>-->

                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>


                </ItemsControl>
            </Grid>
        </ScrollViewer>



    </Grid>


</Window>
