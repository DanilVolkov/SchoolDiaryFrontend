                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </Button.Resources>
                        </Button>

                        <!-- Первая строка: 8:00 - 8:45 -->

                        <!-- Первая строка: 8:00 - 8:45 -->
